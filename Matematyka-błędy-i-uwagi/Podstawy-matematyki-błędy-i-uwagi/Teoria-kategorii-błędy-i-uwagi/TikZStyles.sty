\ProvidesPackage{TikZStyle}



% ##################
% Importing needed TikZ's libraries

\usetikzlibrary{arrows.meta}
% ##################





% ##################
% Styles for drawing vector

\tikzstyle{vector} = [-{Stealth[scale=1.2]},line width=1.75]
\tikzstyle{double vector} = [{Stealth[scale=1.2]}-{Stealth[scale=1.2]},
line width=1.75]

\tikzstyle{vector's line} = [line width=1.75]



% ##################
% Styles for drawing axis and axis arrows

\tikzstyle{axis arrow} = [-{Straight Barb[scale=1.2]},line width=1]
\tikzstyle{axis arrow thin} = [-{Straight Barb[scale=2.0]},line width=0.4]
\tikzstyle{axis arrow reversed} = [{Straight Barb[scale=1.2]}-,line width=1]
\tikzstyle{double axis arrow} = [{Straight Barb[scale=1.2]}-{Straight
  Barb[scale=1.2]},line width=1]


\tikzstyle{axis line} = [line width=1]
\tikzstyle{axis line thin} = [line width=0.4]
% ##################





% ##################
% Styles for drawing arrows on diagrams
\tikzstyle{diagram arrow 1} = [-{Stealth[scale=1.2]}]
