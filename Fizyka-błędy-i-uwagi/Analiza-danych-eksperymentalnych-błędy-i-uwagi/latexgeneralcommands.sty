% Numeracja stron i rozdziałów
\newcommand{\Str}[1]{\textbf{Str.~#1.}}
\newcommand{\StrWg}[2]{\textbf{Str.~#1, wiersz~#2.}}
\newcommand{\StrWierszeG}[2]{\textbf{Str.~#1, wiersze~#2.}}
\newcommand{\StrWd}[2]{\textbf{Str.~#1, wiersz~#2 od~dołu.}}
\newcommand{\StrWierszeD}[2]{\textbf{Str.~#1, wiersze #2 od~dołu.}}

% Do poprawiania błędów
\newcommand{\Dow}{\textbf{Dowód}} % To niezbyt pasuje do opisu POPRAW
\newcommand{\Jest}{\textbf{Jest: }}
\newcommand{\Powin}{\textbf{Powinno być: }}

% Do wyróżniania miejsca w tekście
\newcommand{\red}[1]{{\color{red} #1}}
\newcommand{\Dok}{{\color{red} Dokończ.}}
\newcommand{\Pop}{{\color{red} Popraw.}}
\newcommand{\Prob}{{\color{red} Problem.}}

\newcommand{\Pyt}{{\color{red} Pytanie.}}
