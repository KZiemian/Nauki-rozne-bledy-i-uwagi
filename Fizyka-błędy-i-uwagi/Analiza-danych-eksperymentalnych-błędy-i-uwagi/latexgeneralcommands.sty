% Nagłówki
% \newcommand{\Center}[1]{\begin{center} #1 \end{center}}
\newcommand{\CenterBoldFont}[1]{\begin{center} \textbf{#1} \end{center}}

\newcommand{\Main}[1]{ \begin{center} { \LARGE \textbf{#1} } \end{center} }
\newcommand{\Field}[1]{ \begin{center} { \Large \textbf{#1} } \end{center} }
\newcommand{\Work}[1]{ \begin{center} { \large \textbf{#1}} \end{center} }



