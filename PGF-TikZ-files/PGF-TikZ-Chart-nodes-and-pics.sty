% ############################
% Pics for drawing ticks on the coordinate axis

\tikzset{
  % Basic tick for x axis, thin width
  tick horizontal axis thin/.pic = {
    \draw[line width=0.4] (0,-0.125) -- (0,0.125);
  },
  % Shorter version of tick for x axis, thin width
  tick horizontal axis thin 1/.pic = {
    \draw[line width=0.4] (0,-0.09) -- (0,0.09);
  },
  % Longer version of tick for x axis, thin width
  tick horizontal axis thin 2/.pic = {
    \draw[line width=0.4] (0,-0.2) -- (0,0.2);
  },
  % Basic tick for y axis, thin width
  tick vertical axis thin/.pic = {
    \draw[line width=0.4] (-0.125,0) -- (0.125,0);
  },
  % ???
  tick vertical axis thin 1/.pic = {
    \draw[line width=0.4] (-0.09,0) -- (0.09,0);
  }
}
