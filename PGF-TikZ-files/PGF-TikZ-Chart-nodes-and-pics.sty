% ############################
% Scales for nodes

\tikzstyle{node scale small 1} = [scale=0.9]
\tikzstyle{node scale small 2} = [scale=0.8]


% ############################



% ############################
% Special symbols for charts

\tikzset{
  x mark for horizontal axis 1/.pic = {
    \node at (-0.3,-0.35) {$x$};
  },
  y mark for vertical axis 1/.pic = {
    \node at (0.35,-0.25) {$y$};
  },
  t mark for vertical axis 1/.pic = {
    \node at (0.35,-0.25) {$t$};
  },
  V mark for vertical axis 1/.pic = {
    \node at (0.35,-0.25) {$V$};
  },
}


% ############################




