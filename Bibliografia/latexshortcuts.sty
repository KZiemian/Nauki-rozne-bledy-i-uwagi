% ##########
% Kolory

% Do wyróżniania miejsca w tekście
\newcommand{\red}[1]{{\color{red} #1}}
\newcommand{\Dok}{{\color{red} Dokończ.}}
\newcommand{\Pop}{{\color{red} Popraw.}}
\newcommand{\Prob}{{\color{red} Problem.}}

\newcommand{\Pyt}{{\color{red} Pytanie.}}
\newcommand{\Prze}{{\color{red} Przemyśl.}}

% Nagłówki
\newcommand{\Center}[1]{\begin{center} #1 \end{center}}
\newcommand{\CenterBoldFont}[1]{\Center{\textbf{#1}}}

\newcommand{\Main}[1]{ \begin{center} {\LARGE \textbf{#1} } \end{center} }
\newcommand{\Field}[1]{ \begin{center} {\Large \textbf{#1} } \end{center} }
\newcommand{\Work}[1]{ \begin{center} {\large \textbf{#1}} \end{center} }



% ##########
% Liczby rzymskie
\newcommand{\RomanNumDot}[1]{\textbf{\romannumeral#1.}}  % RoMan NUMeral Dot



% ##########
% Do hyperlinków
\newcommand{\colorlink}[1]{\href{#1}{\color{DarkOrange} link}}
\newcommand{\colorhref}[2]{\href{#1}{\color{DarkOrange} #2}}


% Krótkie linki do odpowiednich zasobów Internetowych
\newcommand{\YouTube}[1]{\href{#1}{\color{DarkOrange} YouTube}}
\newcommand{\arXiv}[2]{\href{#1}{\color{DarkOrange} arXiv: #2}}