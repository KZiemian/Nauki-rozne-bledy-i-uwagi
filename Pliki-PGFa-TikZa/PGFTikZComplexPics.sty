% Coordinates systems.

\tikzset{
  coordinate system with labels small 1/.pic={
    % X axis
    \draw[axis arrow package loc,color=jAxisRed] (0.01,0) -- (1,0);

    \node at (0.7,-0.3) {$x$};


    % Y axis
    \draw[axis arrow package loc,color=jAxisGreen] (0,0.01) -- (0,1);

    \node at (0.3,0.7) {$y$};


    % Z axis
    \draw[axis arrow package loc,color=jAxisBlue] (0,0,0) -- (0,0,1);

    \node at (-0.3,0) {$z$};
  },
  coordinate system with labels medium 1/.pic={
    % X axis
    \draw[axis arrow loc,color=jAxisRed] (0,0) -- (2.2,0);

    \node[symbol loc] at (1.9,-0.3) {$x$};


    % Y axis
    \draw[axis arrow loc,color=jAxisGreen]  (0,0) -- (0,2.2);

    \node[symbol loc] at (0.3,1.9) {$y$};


    % Z axis
    \draw[axis arrow loc,color=jAxisBlue] (0,0,0) -- (0,0,2.2);

    \node[symbol loc] at (-0.725,-0.375) {$z$};
  },
  coordinate system with labels medium 2/.pic = {
    % X axis
    \draw[axis arrow loc,color=jAxisRed] (0,0) -- (2.5,0);

    \node[symbol] at (2.2,-0.3) {$x$};


    % Y axis
    \draw[axis arrow loc,color=jAxisGreen] (0,0) -- (0,2.5);

    \node[symbol] at (0.3,2.2) {$y$};


    % Z axis
    \draw[axis arrow loc,color=jAxisBlue] (0,0,0) -- (0,0,2.5);

    \node[below,symbol] at (-0.85,-0.3) {$z$};
  },
  coordinate system with origin and labels medium 1/.pic={
    \draw[axis arrow loc,color=jAxisRed] (0,0) -- (2.2,0);

    \node[symbol loc] at (1.9,-0.3) {$x$};


    \draw[axis arrow loc,color=jAxisGreen]  (0,0) -- (0,2.2);

    \node[symbol loc] at (0.3,1.9) {$y$};


    \draw[axis arrow loc,color=jAxisBlue] (0,0,0) -- (0,0,2.2);

    \node[symbol loc] at (-0.725,-0.375) {$z$};


    \fill[color=jMathTextFGColor] (0,0) circle [radius=0.09];

    \node[symbol loc] at (0.2,-0.4) {$\pointQ$};
  },
  rotated coordinate system with center and labels 1/.pic={
    \draw[vector] (0,0,0) -- (2,0.996,0.574);

    \node[symbol loc] at (1.331,0.121) {$\vecu$};


    \draw[vector] (0,0,0) -- (-1.15,1.725,0.574);

    \node[symbol loc] at (-0.605,1.331) {$\vecv$};


    \draw[vector] (0,0,0) -- (0,-1.1495,1.991);

    \node[symbol loc] at (-0.968,-1.089) {$\vecw$};


    \fill[color=jMathTextFGColor] (0,0) circle [radius=0.09];

    \node[symbol loc] at (0.363,-0.363) {$\pointQ$};
  },
}
