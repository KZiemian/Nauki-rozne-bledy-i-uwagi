% Styles for drawning numbers as graphs

\tikzset{
  % Node for drawing single bit
  bit node/.style={rectangle,scale=\nodeScaleBigger,
    minimum size=0.9em,draw=black!90!white,thick},
  % Node for drawing special bit
  special bit node/.style={rectangle,scale=\nodeScaleBigger,minimum size=1em,
    fill=jOrange,text=jMathTextFGColorOfStyleDark}
