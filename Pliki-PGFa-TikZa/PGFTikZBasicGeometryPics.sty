% ####################################################################
% PGF/TikZ's pic for drawning basic geometry objects.
% ####################################################################
\ProvidesPackage{PGFTikZBasicGeoemtryPics}


% ############################
% Geometric points.

\tikzset{
  point/.pic = {
    \fill (0,0) circle [radius=0.09];
  },
  point math color/.pic={
    \fill[color=jMathTextFGColor] (0,0) circle [radius=0.09];
  },
  point red/.pic={
    \fill[color=jAxisRed] (0,0) circle [radius=0.09];
  },
  point green/.pic={
    \fill[color=jAxisGreen] (0,0) circle [radius=0.09];
  },
  point blue/.pic={
    \fill[color=jAxisBlue] (0,0) circle [radius=0.09];
  },
  point orange/.pic={
    \fill[color=jOrange] (0,0) circle [radius=0.09];
  },
  point transparent/.pic={
    \fill[opacity=0.65] (0,0) circle [radius=0.09];
  },
  point transparent math color/.pic={
    \fill[color=jMathTextFGColor,opacity=0.65] (0,0) circle [radius=0.09];
  },
}
