% ####################################################################
% PGF/TikZ's pic for drawning geometrical figures.
% ####################################################################
\ProvidesPackage{PGFTikZGeometricalFiguresPics}


% ############################
% Cubes

\tikzset{
  cube gray 1/.pic={
    %
    \fill[color=gray!50!white] (-0.5,0.5,0) -- (0.5,0.5,0) --
    (0.5,0.5,-1) -- (-0.5,0.5,-1) -- cycle;


    %
    \fill[color=gray!80!white] (-0.5,0.5,0) -- (0.5,0.5,0) --
    (0.5,-0.5,0) -- (-0.5,-0.5,0) -- cycle;


    %
    \fill[color=gray] (0.5,-0.5,-1) -- (0.5,0.5,-1) -- (0.5,0.5,0) --
    (0.5,-0.5,0) -- cycle;
  },
  % Użyty Wycentruj go na środku przedniej ścianki.
  cube shearing in y axis direction gray 1/.pic={
    %
    \fill[color=gray] (1,0,0) -- (1,0,1) -- (1.3,1,1.3) -- (1.3,1,0.3) -- cycle;


    %
    \fill[color=gray!50!white] (0.3,1,0.3) -- (0.3,1,1.3) -- (1.3,1,1.3) --
    (1.3,1,0.3) -- cycle;


    %
    \fill[color=gray!80!white] (0,0,1) -- (0.3,1,1.3) -- (1.3,1,1.3) --
    (1,0,1) -- cycle;
  },
  cube shearing in diagonal direction gray 1/.pic={
    % Transformacja ścinania w kierunku (1,1) prostopadle do (1,-1)
    % o kąt pi/4
    \fill[color=gray!50!white] (-1.5,-0.5,0) -- (0.5,0.5,0) --
    (0.5,0.5,-1) -- (-1.5,-0.5,-1) -- cycle;


    %
    \fill[color=gray!80!white] (-1.5,-0.5,0) -- (0.5,0.5,0) --
    (1.5,0.5,0) -- (-0.5,-0.5,0) -- cycle;


    %
    \fill[color=gray] (1.5,0.5,-1) -- (0.5,0.5,-1) -- (0.5,0.5,0) --
    (1.5,0.5,0) -- cycle;
  },
}
